{
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "plugins": [
        "react"
    ],
    "settings": {
      "react": {
        "pragma": "h"
      }
    },
    "parserOptions": {
      "ecmaFeatures": {
        "modules": true,
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "es6": true
    },
    "rules":{
        "react/jsx-no-undef": 2,
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2
    }
}